{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "#lib/*": [
        "./lib/*.js"
      ],
      "#tests/*": [
        "./tests/*.js"
      ],
      "#root/*": [
        "./*"
      ],
    }
  },
  "include": [
    "lib/**/*",
    "tests/**/*"
  ]
}
